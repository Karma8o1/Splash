<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drawer"
    android:background="#D3D3D3"
    >

    <Button
        android:id="@+id/search"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#685B5B"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:icon="?android:attr/actionModeFindDrawable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message" />

    <Button
        android:id="@+id/exit"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#685B5B"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:icon="@android:drawable/btn_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <Button
        android:id="@+id/message"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="340dp"
        android:backgroundTint="#685B5B"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:icon="@android:drawable/ic_dialog_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="96dp"
        android:layout_height="27dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Searching"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="96dp"
        android:layout_height="25dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:text="Email"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/email" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="94dp"
        android:layout_height="20dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="Messging"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/message" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="94dp"
        android:layout_height="27dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="Exit"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/exit" />

    <Button
        android:id="@+id/email"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="#685B5B"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        app:icon="@android:drawable/ic_menu_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="398dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:gravity="center|center_horizontal"
        android:text="COMPONENTS"
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="404dp"
        android:layout_height="249dp"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        tools:srcCompat="@drawable/ic_launcher_foreground" />

</androidx.constraintlayout.widget.ConstraintLayout>